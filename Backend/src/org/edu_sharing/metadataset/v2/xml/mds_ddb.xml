<metadataset id="default" label="default" hidden="false">
		<name>Core Metadataset</name>
		<i18n>mds_translation</i18n>
	<widgets>
      <widget>
                <id>title</id>
                <caption>Title</caption>
                <placeholder>z.B. Goethe</placeholder>
                <type>text</type>
      </widget>
      <widget>
                <id>place</id>
                <caption>Ort</caption>
                <placeholder>z.B. Frankfurt</placeholder>
                <type>text</type>
      </widget>
      <widget>
                <id>affiliate</id>
                <caption>Person/Organisation</caption>
                <placeholder>z.B. Kandinsky</placeholder>
                <type>text</type>
      </widget>

  </widgets>

		<templates>
			<template>
				<id>search</id>
				<html><![CDATA[
              <title>
              <place>
              <affiliate>
			  ]]></html>
			</template>
		</templates>
		<groups>
			<group>
				<id>ngsearch</id>
				<views>
					<view>search</view>
				</views>
			</group>
		</groups>
</metadataset>